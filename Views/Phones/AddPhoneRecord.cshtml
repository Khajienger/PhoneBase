@model PhoneRecord
@{
    ViewData["Title"] = "Добавить запись";
}

<!DOCTYPE html>
<html lang="ru">
    <head>
    </head>
    <body>
        <form method="post" asp-controller="Phones" asp-action="AddNewRecord"
          Surname="surname"
          Name="name"
          Patronymic="patronymic"
          Number="number"
          Address="address"
          Description="description">
            <table align="center">
                <thead>
                    <tr>
                        <th>
                            <label asp-for="surname">Фамилия</label>
                        </th>
                        <td>
                            <input asp-for="surname"/>
                            <span asp-validation-for="surname"/>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label asp-for="name">Имя</label>
                        </th>
                        <td>
                            <input asp-for="name"/>
                            <span asp-validation-for="name"/>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label asp-for="patronymic">Отчество</label>
                        </th>
                        <td>
                            <input asp-for="patronymic"/>
                            <span asp-validation-for="patronymic"/>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label asp-for="number">Телефон</label>
                        </th>
                        <td>
                            <input asp-for="number"/>
                            <span asp-validation-for="number"/>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label asp-for="address">Адрес</label>
                        </th>
                        <td>
                            <input asp-for="address"/>
                            <span asp-validation-for="address"/>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label asp-for="description">Описание</label>
                        </th>
                        <td>
                            <input asp-for="description"/>
                            <span asp-validation-for="description"/>
                        </td>
                    </tr>
                    <tr>
                        <th>
                        </th>
                        <td>
                            <input type="submit" value="Добавить"/>
                        </td>
                    </tr>
                </thead>
            </table>
        </form>
    </body>
</html>